@using CommercialAutomation.Entities.Concrete
@model List<SaleMovement>
@{
    ViewBag.Title = "CustomerReceive";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Satın Alınan Ürünler</h3>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">@ViewBag.customerName</li>
</ol>


<table class="table table-striped">
    <tr style="background-color:deepskyblue">
        <th>Id</th>
        <th>Ürün</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Fiyat</th>
        <th>Tarih</th>
        <th>Yazdır</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.SaleMovementId</th>
            <td>@item.Product.ProductName</td>
            <td>@item.Employee.EmployeeName @item.Employee.EmployeeLastName</td>
            <td>@item.Piece</td>
            <td>@item.UnitPirce</td>
            <td>@item.SumPrice</td>
            <td>@item.SaleDate</td>
            <td><a href="#" class="btn btn-default" style="background-color:#0094ff; color:white;">Yazdır</a></td>
        </tr>
    }
</table>

