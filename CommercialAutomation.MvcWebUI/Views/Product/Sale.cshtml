@model CommercialAutomation.Entities.Concrete.SaleMovement
@{
    ViewBag.Title = "Sale";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Satış işlemi sayfası</h3>
@using (Html.BeginForm("Sale", "Product", FormMethod.Post))
{
<div class="form-group">
    <b>@Html.Label("Ürün Id")</b>
    <input type="text" name="ProductId" value="@ViewBag.result" class="form-control" readonly />
    <br />
    <b>@Html.Label("Personel Id")</b>
    @Html.DropDownListFor(x => x.EmployeeId, (List<SelectListItem>)ViewBag.valueEmployee,
         new { @class = "form-control" })
    <br />
    <b>@Html.Label("Müşteri Id")</b>
    @Html.TextBoxFor(c => c.CustomerId, new { @class = "form-control" })
    <br />
    <b>@Html.Label("Adet")</b>
    <input type="number" name="Piece" class="form-control" max="20" min="1" id="txt1" onchange="sum();" />
    <br />
    <b>@Html.Label("Birim Fiyatı")</b>
    <input type="text" name="UnitPirce" value="@ViewBag.result1" id="txt2" onkeyup="sum();" class="form-control" placeholder="Adet giriniz.."/>
    <br />
    <b>@Html.Label("Toplam Satış Fiyatı")</b>
    <input type="text" name="SumPrice" value="0" id="txt3" class="form-control" readonly/>
    <br />
    <button class="btn btn-info" id="added">Satış Yap</button>
</div>
}
<br />

<script>
    function sum() {
        var number1 = document.getElementById('txt1').value;
        var number2 = document.getElementById('txt2').value;
        var result = parseInt(number1) * parseInt(number2);
        if (!isNaN(result)) {
            document.getElementById('txt3').value = result;
        }
    }
</script>


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>

<script>
    $('#added').click(function () {
        swal({
            title: "Satıldı!",
            text: "Satış Başarıyla Gerçekleşti!",
            icon: "success",
            button: false
        });
    });
</script>



