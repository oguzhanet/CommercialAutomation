@using CommercialAutomation.Entities.Concrete
@model List<Department>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{ string status = "";}
@{ string statusButton = "";}

<a href="/Department/Add/" class="btn btn-default" style="background-color:deepskyblue; margin-block-end:15px;">Yeni Departman Ekle</a>

<table id="example" class="table is-striped">

    <thead>

        <tr style="background-color:deepskyblue">

            <th>Id</th>
            <th>Departman</th>
            <th>Durum</th>
            <th>Aktif &ndash; Pasif</th>
            <th>Güncelle</th>
            <th>Departman Detayları</th>

        </tr>

    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            if (item.DepartmentStatus == true)
            {
                status = "Pasif Yap";
            }
            if (item.DepartmentStatus == false)
            {
                status = "Aktif Yap";
            }
            if (item.DepartmentStatus == true)
            {
                statusButton = "btn btn-danger";
            }
            if (item.DepartmentStatus == false)
            {
                statusButton = "btn btn-warning";
            }

            <tr>
                <th>@item.DepartmentId</th>
                <td>@item.DepartmentName</td>
                <td>@item.DepartmentStatus</td>
                <td><a href="/Department/Delete/@item.DepartmentId" class="@statusButton">@status</a></td>
                <td><a href="/Department/Update/@item.DepartmentId" class="btn btn-default" style="background-color:#ff6a00; color:white;">Güncelle</a></td>
                <td><a href="/Department/Detail/@item.DepartmentId" class="btn btn-default" style="background-color:#0094ff; color:white;">Departman Detay</a></td>
            </tr>
        }
    </tbody>

</table>
<br />
<br />


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.1/css/bulma.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bulma.min.css">


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/dataTables.bulma.min.js"></script>


<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json",
            }
        });
    });
</script>