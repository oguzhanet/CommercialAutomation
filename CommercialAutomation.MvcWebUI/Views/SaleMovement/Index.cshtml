@using CommercialAutomation.Entities.Concrete
@model List<SaleMovement>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <div class="row gx-5">
        <div class="col" style="margin-top:5px; margin-bottom:5px;">
            <a href="/SaleMovement/Add/" class="btn btn-default" style="background-color:deepskyblue; margin-block-end:15px;">Yeni Satış Ekle</a>
        </div>
        <div class="col-2" style="margin-top:5px; margin-bottom:5px; margin-right:15px;">
            <a href="/SaleMovement/Transaction/" class="btn btn-default" style="background-color:#808080; margin-block-end:15px;">Çıktı İşlemleri</a>
        </div>
    </div>
</div>


<table id="example" class="table is-striped">
    <thead>
        <tr style="background-color:deepskyblue">
            <th>Id</th>
            <th>Ürün</th>
            <th>Müşteri</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Birim Fiyat</th>
            <th>Toplam Fiyat</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.SaleMovementId</th>
                <td>@item.Product.ProductName</td>
                <td>@item.Customer.CustomerName @item.Customer.CustomerLastName</td>
                <td>@item.Employee.EmployeeName @item.Employee.EmployeeLastName</td>
                <td>@item.Piece</td>
                <td>@item.UnitPirce</td>
                <td>@item.SumPrice</td>
                <td>@item.SaleDate</td>
                <td><a href="/SaleMovement/Update/@item.SaleMovementId" class="btn btn-default" style="background-color:#ff6a00; color:white;">Güncelle</a></td>
                <td><a href="/SaleMovement/SaleDetail/@item.SaleMovementId" class="btn btn-default" style="background-color:#0094ff; color:white;">Detaylar</a></td>
            </tr>
        }
    </tbody>
</table>

<br />
<br />

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.9.1/css/bulma.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bulma.min.css">


<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.25/js/dataTables.bulma.min.js"></script>


<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json",
            }
        });
    });
</script>