@using CommercialAutomation.Entities.Concrete
@model List<SaleMovement>
@{
    ViewBag.Title = "SaleDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Satış detayları sayfası</h3>

<table class="table table-striped">
    <tr style="background-color:deepskyblue">
        <th>Id</th>
        <th>Ürün</th>
        <th>Muşteri</th>
        <th>Personel</th>
        <th>Adet</th>
        <th>Fiyat</th>
        <th>Toplam Fiyat</th>
        <th>Tarih</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.SaleMovementId</th>
            <td>@item.Product.ProductName</td>
            <td>@item.Customer.CustomerName @item.Customer.CustomerLastName</td>
            <td>@item.Employee.EmployeeName @item.Employee.EmployeeLastName</td>
            <td>@item.Piece</td>
            <td>@item.UnitPirce</td>
            <td>@item.SumPrice</td>
            <td>@item.SaleDate</td>
        </tr>
    }
</table>
<button class="btn btn-default" style="background-color:#0094ff; color:white;">Yazdır</button>

