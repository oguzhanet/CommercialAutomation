@using CommercialAutomation.Entities.Concrete
@model List<CargoFollow>
@{
    ViewBag.Title = "CargoFollowDetail";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<table class="table table-striped">
    <tr style="background-color:deepskyblue">
        <th>#</th>
        <th>Açıklama</th>
        <th>Tarih</th>
    </tr>

    @{ int number = 0;}
    @foreach (var item in Model)
    {

        <tr>
            <th>@{number++;} @number</th>
            <th>@item.CargoFollowDescription</th>
            <td>@item.CargoFollowDate</td>
        </tr>

    }
</table>

