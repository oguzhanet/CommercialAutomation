@using CommercialAutomation.Entities.Concrete
@model List<InvoiceItem>
@{
    ViewBag.Title = "InvoiceDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Fatura kalemleri sayfası</h3>

<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>

<table class="table table-hover">
    <tr style="background-color:deepskyblue">
        <th>Id</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Toplam Fiyat</th>
        <th>Fatura Sahibi</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>@item.InvoiceItemId</th>
            <td>@item.Description</td>
            <td>@item.Quantity</td>
            <td>@item.UnitPrice</td>
            <td>@item.SumPrice</td>
            <td>@item.Invoice.Receiver</td>
        </tr>
    }
</table>

<a href="/InvoiceItem/Add/" class="btn btn-default" style="background-color:#0094ff; color:white;">Yeni Kalem Girişi</a>


