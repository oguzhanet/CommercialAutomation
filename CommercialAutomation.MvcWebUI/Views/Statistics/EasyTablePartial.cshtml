@model IEnumerable<CommercialAutomation.MvcWebUI.Models.StatisticsPartialGroup>


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayıları</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Adet</th>
                </tr>
            </thead>
            <tbody>
                @{ int number = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{number++;} @number</td>
                        <td>@item.DepartmentId</td>
                        <td>
                            @if (item.Count == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }
                            @if (item.Count == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 70%"></div>
                                </div>
                            }
                            @if (item.Count >= 3)
                            {
                                <div class="progress progress-xs progress-striped active">
                                    <div class="progress-bar bg-success" style="width: 90%"></div>
                                </div>
                            }

                        </td>
                        @if (item.Count == 1)
                        {
                            <td><span class="badge bg-primary">@item.Count</span></td>
                        }
                        @if (item.Count == 2)
                        {
                            <td><span class="badge bg-warning">@item.Count</span></td>
                        }
                        @if (item.Count >= 3)
                        {
                            <td><span class="badge bg-success">@item.Count</span></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>